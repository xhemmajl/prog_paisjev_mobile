<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/gradient"
    tools:context=".Third">

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/diplomata"
        android:text="@string/about"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:text="@string/aboutour"
        android:textSize="27sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/open_fb"
        android:layout_width="187dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/facebook_ikona" />

    <ImageView
        android:id="@+id/open_insta"
        android:layout_width="196dp"
        android:layout_height="123dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/instagram_ikona" />

    <ImageView
        android:id="@+id/open_yt"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/youtube_ikona" />


</RelativeLayout>
